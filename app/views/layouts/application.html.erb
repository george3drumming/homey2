<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= favicon_link_tag 'home.png' %>
  <title>Homey</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
      
    <div class="navbar-header">
      <%= image_tag 'home.png', :size => "50x50" %>
      <%= link_to 'Homey', root_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to 'Group', groups_path %></li>
        <li><%= link_to 'Conversations', conversations_path %></li>
        <li><%#= link_to 'Users', users_path %></li>
        <li><%#= link_to 'New Group', groups_new_group_path %></li>      
        <li><%= link_to 'Charges', charges_new_path %></li>
        <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Log In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="page-header">
    <h1><%= yield :page_header %></h1>
  </div>

  <%= yield %>
</div>

<footer>
  <div class="container">
    <p class="text-muted">Created by <a href="Homey..." target="_blank">Homey</a></p>
  </div>
</footer>

</body>
</html>